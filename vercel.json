{
  "version": 2,
  "buildCommand": "bash build.sh",
  "builds": [
    {
      "src": "pirateone_backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "pirateone_backend/wsgi.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "pirateone_backend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "pirateone_backend/wsgi.py"
    }
  ]
}
